        <problem id="f5" class="problem.FunctionOptimisationProblem" domain="R(-5.0:5.0)^2">
            <objective class="problem.objective.Maximise"/>
            <function class="functions.continuous.unconstrained.MultimodalFunction5"/>
        </problem>
    </problems>

